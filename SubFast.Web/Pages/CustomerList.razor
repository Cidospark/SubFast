@page "/"
@inherits CustomerListBase

<h3>Customers</h3>

@if (Customers == null || !Customers.Any())
{
    <div class="spinner"></div>
}else{
<div class="card-deck" style="display: flex; flex-wrap:wrap; justify-content: space-between;">
    @foreach (var customer in Customers)
    {
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@customer.FirstName @customer.LastName</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@customer.PhotoPath" />
            <div class="card-footer text-center">
                <a href="#" class="btn btn-primary m-1">View</a>

                <a href="#" class="btn btn-primary m-1">Edit</a>

                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
}